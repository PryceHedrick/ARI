{
  "version": "1.0.0",
  "budget": {
    "daily": {
      "maxTokens": 800000,
      "maxCost": 2.50,
      "reserved": {
        "user": 500000,
        "autonomous": 300000
      }
    },
    "throttling": {
      "warning": 0.80,
      "reduce": 0.90,
      "pause": 0.95
    },
    "resetTime": "00:00",
    "timezone": "America/New_York"
  },
  "models": {
    "haiku": {
      "id": "claude-3-haiku-20240307",
      "inputCost": 0.00025,
      "outputCost": 0.00125,
      "description": "Fast and cost-efficient for simple tasks"
    },
    "sonnet": {
      "id": "claude-3-5-sonnet-20241022",
      "inputCost": 0.003,
      "outputCost": 0.015,
      "description": "Balanced performance for moderate complexity"
    },
    "opus": {
      "id": "claude-opus-4-20250514",
      "inputCost": 0.015,
      "outputCost": 0.075,
      "description": "Maximum intelligence for complex tasks"
    }
  },
  "routing": {
    "defaultModel": "sonnet",
    "rules": {
      "TRIVIAL": "haiku",
      "SIMPLE": "haiku",
      "MODERATE": "sonnet",
      "COMPLEX": "opus"
    },
    "overrides": {
      "security": "opus",
      "credentials": "opus",
      "destructive": "opus",
      "highRisk": "opus"
    }
  },
  "initiatives": {
    "autoExecute": true,
    "autoExecuteThreshold": {
      "maxCostPerTask": 0.10,
      "maxRisk": 30,
      "maxFilesAffected": 3,
      "minPriority": 70
    },
    "approvalRequired": {
      "minCost": 0.10,
      "minRisk": 30,
      "minFilesAffected": 3,
      "touchesSecurity": true,
      "touchesConfig": true
    }
  },
  "monitoring": {
    "alerts": {
      "critical": {
        "enabled": true,
        "channels": ["pushover"],
        "conditions": {
          "budgetExceededBy": 0.20,
          "errorRate": 10,
          "securityEvent": true
        }
      },
      "warning": {
        "enabled": true,
        "channels": ["dashboard", "pushover"],
        "conditions": {
          "budgetAt": 0.80,
          "approvalQueueSize": 5,
          "syncOutdated": 24
        }
      },
      "info": {
        "enabled": true,
        "channels": ["dashboard"],
        "conditions": {
          "deliverableReady": true,
          "workCompleted": true
        }
      }
    }
  },
  "reporting": {
    "daily": {
      "enabled": true,
      "time": "21:00",
      "includeMetrics": true
    },
    "weekly": {
      "enabled": true,
      "day": "sunday",
      "time": "18:00"
    }
  }
}
