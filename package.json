{
  "name": "ari",
  "version": "2.1.0",
  "description": "ARI - Artificial Reasoning Intelligence: Secure Multi-Agent Personal OS",
  "author": {
    "name": "Pryce Hedrick",
    "url": "https://github.com/PryceHedrick"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Ari-OS/ARI.git"
  },
  "homepage": "https://github.com/Ari-OS/ARI",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "ari": "dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "gateway:start": "node dist/cli/index.js gateway start",
    "doctor": "node dist/cli/index.js doctor",
    "audit:verify": "node dist/cli/index.js audit verify",
    "dashboard:dev": "cd dashboard && npm run dev",
    "dashboard:build": "cd dashboard && npm run build",
    "scan:pii": "bash scripts/scan-pii.sh",
    "precommit": "npm run scan:pii && npm run lint && npm run typecheck",
    "prepare": "husky"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.72.1",
    "@fastify/static": "9.0.0",
    "@modelcontextprotocol/sdk": "^1.25.3",
    "@notionhq/client": "^5.9.0",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "fastify": "^5.7.4",
    "imap-simple": "^5.1.0",
    "mailparser": "^3.9.3",
    "nodemailer": "^7.0.13",
    "ora": "^8.0.0",
    "pino": "^8.17.0",
    "playwright": "1.58.1",
    "uuid": "^9.0.0",
    "ws": "^8.16.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@eslint/js": "^9.39.2",
    "@playwright/test": "1.58.1",
    "@types/imap-simple": "^4.2.10",
    "@types/mailparser": "^3.4.6",
    "@types/node": "^20.19.30",
    "@types/nodemailer": "^7.0.9",
    "@types/uuid": "^9.0.0",
    "@types/ws": "^8.5.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitest/coverage-v8": "^2.1.9",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "pino-pretty": "^10.3.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.54.0",
    "vitest": "^2.1.9"
  },
  "overrides": {
    "semver": "^7.5.2",
    "esbuild": "^0.25.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
