{
  "name": "ari",
  "version": "2.0.0",
  "description": "ARI - Artificial Reasoning Intelligence: Secure Multi-Agent Personal OS",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "ari": "dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "npx eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src/",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "gateway:start": "node dist/cli/index.js gateway start",
    "doctor": "node dist/cli/index.js doctor",
    "audit:verify": "node dist/cli/index.js audit verify",
    "dashboard:dev": "cd dashboard && npm run dev",
    "dashboard:build": "cd dashboard && npm run build",
    "prepare": "husky"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.3",
    "chalk": "^5.3.0",
    "commander": "^14.0.2",
    "fastify": "^5.7.2",
    "ora": "^9.1.0",
    "pino": "^10.3.0",
    "pino-pretty": "^13.1.3",
    "uuid": "^13.0.0",
    "ws": "^8.16.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.0",
    "@types/ws": "^8.5.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^8.57.1",
    "husky": "^9.1.7",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^1.1.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
