{
  "name": "ari",
  "version": "2.1.0",
  "description": "ARI - Artificial Reasoning Intelligence: Secure Multi-Agent Personal OS",
  "author": {
    "name": "Pryce Hedrick",
    "url": "https://github.com/PryceHedrick"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Ari-OS/ARI.git"
  },
  "homepage": "https://github.com/Ari-OS/ARI",
  "bugs": {
    "url": "https://github.com/Ari-OS/ARI/issues"
  },
  "keywords": [
    "ai",
    "multi-agent",
    "personal-ai",
    "autonomous-agents",
    "typescript",
    "local-first",
    "security",
    "governance"
  ],
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "ari": "dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "gateway:start": "node dist/cli/index.js gateway start",
    "doctor": "node dist/cli/index.js doctor",
    "audit:verify": "node dist/cli/index.js audit verify",
    "dashboard:dev": "cd dashboard && npm run dev",
    "dashboard:build": "cd dashboard && npm run build",
    "scan:pii": "bash scripts/scan-pii.sh",
    "precommit": "npm run scan:pii && npm run lint && npm run typecheck",
    "prepare": "husky"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.74.0",
    "@fastify/static": "9.0.0",
    "@google/genai": "1.40.0",
    "@modelcontextprotocol/sdk": "^1.25.3",
    "@notionhq/client": "^5.9.0",
    "chalk": "^5.3.0",
    "commander": "^14.0.3",
    "dotenv": "17.2.4",
    "elevenlabs": "1.59.0",
    "fastify": "^5.7.4",
    "grammy": "1.40.0",
    "imap-simple": "^5.1.0",
    "mailparser": "^3.9.3",
    "nodemailer": "^8.0.1",
    "openai": "6.21.0",
    "ora": "^9.3.0",
    "pino": "^10.3.1",
    "playwright": "1.58.2",
    "uuid": "^13.0.0",
    "ws": "^8.16.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@eslint/js": "^10.0.1",
    "@playwright/test": "1.58.2",
    "@types/imap-simple": "^4.2.10",
    "@types/mailparser": "^3.4.6",
    "@types/node": "^20.19.30",
    "@types/nodemailer": "^7.0.9",
    "@types/uuid": "^9.0.0",
    "@types/ws": "^8.5.0",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "16.2.7",
    "pino-pretty": "^13.1.3",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.55.0",
    "vitest": "^2.1.9"
  },
  "overrides": {
    "semver": "^7.5.2",
    "esbuild": "^0.25.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "lint-staged": {
    "src/**/*.ts": "eslint"
  }
}
